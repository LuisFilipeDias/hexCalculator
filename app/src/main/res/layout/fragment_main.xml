<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivityFragment">

    <LinearLayout
        android:id="@+id/main_display_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_display"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Display0"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_display_layout"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/calc_D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="31"
            android:text="D" />

        <Button
            android:id="@+id/calc_E"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="31"
            android:text="E" />

        <Button
            android:id="@+id/calc_F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="31"
            android:text="F" />

        <Button
            android:id="@+id/calc_and"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="31"
            android:text="&amp;" />

        <Button
            android:id="@+id/calc_A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="32"
            android:text="A" />

        <Button
            android:id="@+id/calc_B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="32"
            android:text="B" />

        <Button
            android:id="@+id/calc_C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="32"
            android:text="C" />

        <Button
            android:id="@+id/calc_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="32"
            android:text="|" />

        <Button
            android:id="@+id/calc_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="33"
            android:text="7" />

        <Button
            android:id="@+id/calc_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="33"
            android:text="8" />

        <Button
            android:id="@+id/calc_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="33"
            android:text="9" />

        <Button
            android:id="@+id/calc_div"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="33"
            android:text="/" />

        <Button
            android:id="@+id/calc_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="34"
            android:text="4" />

        <Button
            android:id="@+id/calc_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="34"
            android:text="5" />

        <Button
            android:id="@+id/calc_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="34"
            android:text="6" />

        <Button
            android:id="@+id/calc_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="34"
            android:text="*" />

        <Button
            android:id="@+id/calc_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="35"
            android:text="1" />

        <Button
            android:id="@+id/calc_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="35"
            android:text="2" />

        <Button
            android:id="@+id/calc_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="35"
            android:text="3" />

        <Button
            android:id="@+id/calc_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="35"
            android:text="-" />

        <Button
            android:id="@+id/calc_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="36"
            android:text="0" />

        <Button
            android:id="@+id/calc_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="36"
            android:text="." />

        <Button
            android:id="@+id/calc_equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_row="36"
            android:text="=" />

        <Button
            android:id="@+id/calc_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:layout_row="36"
            android:text="+" />
    </GridLayout>
</RelativeLayout>
