<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivityFragment">

    <LinearLayout
        android:id="@+id/main_display_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_mode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Mode" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radBin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="bin" />

            <RadioButton
                android:id="@+id/radDec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="dec" />

            <RadioButton
                android:id="@+id/radHex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="hex" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_display_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_display_mode"
        android:background="@color/white"
        android:orientation="vertical">
        a

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/main_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="50dp" />
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sub_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="30dp" />
        </HorizontalScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/main_display_layout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/calc_D"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="D"
                android:textColor="@color/white"
                android:textSize="23dp" />

            <Button
                android:id="@+id/calc_E"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="E"
                android:textColor="@color/white"
                android:textSize="23dp" />

            <Button
                android:id="@+id/calc_F"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="F"
                android:textColor="@color/white"
                android:textSize="23dp" />

            <Button
                android:id="@+id/calc_and"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="&amp;"
                android:textColor="@color/white"
                android:textSize="23dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/calc_A"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="A"
                android:textColor="@color/white"
                android:textSize="23dp" />

            <Button
                android:id="@+id/calc_B"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="B"
                android:textColor="@color/white"
                android:textSize="23dp" />

            <Button
                android:id="@+id/calc_C"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="23dp" />

            <Button
                android:id="@+id/calc_or"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="|"
                android:textColor="@color/white"
                android:textSize="23dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/calc_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="23dp" />

            <Button
                android:id="@+id/calc_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="23dp" />

            <Button
                android:id="@+id/calc_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="23dp" />

            <Button
                android:id="@+id/calc_div"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="23dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/calc_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="23dp" />

            <Button
                android:id="@+id/calc_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="23dp" />

            <Button
                android:id="@+id/calc_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="23dp" />

            <Button
                android:id="@+id/calc_times"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="23dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/calc_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="23dp" />

            <Button
                android:id="@+id/calc_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="23dp" />

            <Button
                android:id="@+id/calc_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="23dp" />

            <Button
                android:id="@+id/calc_minus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="23dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <Button
                android:id="@+id/calc_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="23dp" />

            <Button
                android:id="@+id/calc_dot"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="."
                android:textColor="@color/white"
                android:textSize="23dp" />

            <Button
                android:id="@+id/calc_equal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="="
                android:textColor="@color/white"
                android:textSize="23dp" />

            <Button
                android:id="@+id/calc_plus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/calc_button"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="23dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
